#include <filesystem>

namespace fs = std::filesystem;


std::string folderName = "myFolder";

    // Sprawdź, czy folder istnieje
    if (!fs::exists(folderName)) {
        // Jeśli nie istnieje, utwórz go
        if (fs::create_directory(folderName)) {
            std::cout << "Folder " << folderName << " został utworzony." << std::endl;
        } else {
            std::cerr << "Nie udało się utworzyć folderu " << folderName << "." << std::endl;
        }
    } else {
        std::cout << "Folder " << folderName << " już istnieje." << std::endl;
    }
